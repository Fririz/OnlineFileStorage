{
  "Routes": [
    //Identity Service 

    // Login
    {
      "DownstreamPathTemplate": "/api/sessions",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/sessions",
      "UpstreamHttpMethod": [ "POST", "OPTIONS" ]
    },
    // Logout
    {
      "DownstreamPathTemplate": "/api/sessions",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/sessions",
      "UpstreamHttpMethod": [ "DELETE", "OPTIONS" ]
    },
    // Register 
    {
      "DownstreamPathTemplate": "/api/users",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/users",
      "UpstreamHttpMethod": [ "POST", "OPTIONS" ]
    },
    // Get Me
    {
      "DownstreamPathTemplate": "/api/users/me",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/users/me",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ]
    },

    //File API Service

    // Files
    {
      "DownstreamPathTemplate": "/api/files",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/files",
      "UpstreamHttpMethod": [ "POST", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/files/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/files/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    // Folder
    {
      "DownstreamPathTemplate": "/api/folders",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/folders",
      "UpstreamHttpMethod": [ "POST", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    
    {
      "DownstreamPathTemplate": "/api/folders/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/folders/{id}",
      "UpstreamHttpMethod": [ "DELETE", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/folders/{id}/items",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/folders/{id}/items",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    // Items
    {
      "DownstreamPathTemplate": "/api/items",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/items",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/items/{id}/parent",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/items/{id}/parent",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    //File Storage Service
    {
      "DownstreamPathTemplate": "/api/files/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "filestorageservice", "Port": 8083 }
      ],
      "UpstreamPathTemplate": "/api/storage/files/{id}",
      "UpstreamHttpMethod": [ "PUT", "OPTIONS" ],
      "QoSOptions": {
        "TimeoutValue": 1800000
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/files/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "filestorageservice", "Port": 8083 }
      ],
      "UpstreamPathTemplate": "/api/storage/files/{id}",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ],
      "QoSOptions": { 
        "TimeoutValue": 1800000
      },
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:6002"
  }
}