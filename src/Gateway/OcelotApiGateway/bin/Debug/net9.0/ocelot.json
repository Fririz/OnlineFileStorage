{
  "Routes": [
    {
      //IdentityService
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/auth/login",
      "UpstreamHttpMethod": [ "GET", "POST", "OPTIONS"]
    },
    {
      "DownstreamPathTemplate": "/api/auth/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/auth/register",
      "UpstreamHttpMethod": ["POST", "OPTIONS"]
    },
    {
      "DownstreamPathTemplate": "/api/auth/logout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/auth/logout",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/auth/GetCurrentUser",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [{
        "Host": "identity-service",
        "Port": 8080
      }],
      "UpstreamPathTemplate": "/api/auth/GetCurrentUser",
      "UpstreamHttpMethod": [ "GET" , "OPTIONS"]
    },
    //FileApiService
    {
      "DownstreamPathTemplate": "/api/file/uploadfile",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/file/uploadfile",
      "UpstreamHttpMethod": [ "POST", "GET", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/api/file/downloadfile/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/file/downloadfile/{id}",
      "UpstreamHttpMethod": [ "POST", "GET", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    //FileStorageService
    {
      "DownstreamPathTemplate": "/api/upload/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "filestorageservice", "Port": 8083 }
      ],
      "UpstreamPathTemplate": "/api/upload/{id}",
      "UpstreamHttpMethod": [ "POST", "GET", "OPTIONS" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
    "DownstreamPathTemplate": "/api/download/{id}/{filename}/{token}",
    "DownstreamScheme": "http",
    "DownstreamHostAndPorts": [
      { "Host": "filestorageservice", "Port": 8083 }
    ],
    "UpstreamPathTemplate": "/api/download/{id}/{filename}/{token}",
    "UpstreamHttpMethod": [ "POST", "GET", "OPTIONS" ],
    "AuthenticationOptions": {
      "AuthenticationProviderKey": "Bearer",
      "AllowedScopes": []
    }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:6002"
  }
}

