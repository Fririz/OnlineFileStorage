{
  "Routes": [
    {
      //IdentityService
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/auth/login",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },
    {
      // Пустой OPTIONS для /api/auth/login, чтобы app.UseCors мог его обработать
      "UpstreamPathTemplate": "/api/auth/login",
      "UpstreamHttpMethod": [ "OPTIONS" ]
    },
    {
      "DownstreamPathTemplate": "/api/auth/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/auth/register",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      // Пустой OPTIONS для /api/auth/register
      "UpstreamPathTemplate": "/api/auth/register",
      "UpstreamHttpMethod": [ "OPTIONS" ]
    },
    {
      "DownstreamPathTemplate": "/api/auth/logout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "identity-service", "Port": 8080 }
      ],
      "UpstreamPathTemplate": "/api/auth/logout",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      // Пустой OPTIONS для /api/auth/logout
      "UpstreamPathTemplate": "/api/auth/logout",
      "UpstreamHttpMethod": [ "OPTIONS" ]
    },

    //FileApiService
    {
      "DownstreamPathTemplate": "/api/File/GetFile",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "fileapiservice", "Port": 8082 }
      ],
      "UpstreamPathTemplate": "/api/File/GetFile/",
      "UpstreamHttpMethod": [ "POST", "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },
    {
      // КЛЮЧЕВОЕ ИСПРАВЛЕНИЕ:
      // Этот "пустой" OPTIONS маршрут ПЕРЕХВАТЫВАЕТ preflight-запрос
      // и НЕ ИМЕЕТ AuthenticationOptions, 
      // позволяя app.UseCors() ответить до проверки токена.
      "UpstreamPathTemplate": "/api/File/GetFile/",
      "UpstreamHttpMethod": [ "OPTIONS" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:6000"
  }
}

